{
  "name": "bloombeasts",
  "version": "1.0.0",
  "description": "Bloom Beasts card game for Horizon Worlds",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:standalone": "node bundle-with-namespace.js",
    "build:horizon": "cd deployments/horizon && npm run build",
    "build:web:prod": "cd deployments/web && npm run build:prod",
    "compile": "tsc --noEmit",
    "bundle": "node bundle.js",
    "test": "jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "jest": "^30.2.0",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
